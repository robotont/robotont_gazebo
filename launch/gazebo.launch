<?xml version="1.0" ?>
<launch>
    <arg name="world" default="worlds/empty.world" />
    <arg name="x_pos" default="0"/>
    <arg name="model" default="robotont_gazebo_nuc"/>
    <arg name="ns" default=""/>
    <arg name="prefix" default="$(arg ns)_"/>
    <arg name="robot_name" default="robotont"/>
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" value="$(arg world)"/>
    </include>
    <!-- topic for 3d_mapping -->
    <group unless="$(eval arg('model') == 'robotont_gazebo_lidar')">
        <node name="relay" type="relay" pkg="topic_tools" args="/camera/depth/image_rect_raw /camera/aligned_depth_to_color/image_raw" />
    </group>
    <!-- Convert an xacro and put on parameter server -->
    <param if="$(eval prefix == '_')" name="robot_description" command="$(find xacro)/xacro $(find robotont_gazebo)/urdf/$(arg model).urdf.xacro"/>
    <param unless="$(eval prefix == '_')" name="robot_description" command="$(find xacro)/xacro $(find robotont_gazebo)/urdf/$(arg model).urdf.xacro prefix:=$(arg prefix)"/>

    <group if="$(eval prefix == '_')">
        <include file="$(find robotont_gazebo)/launch/upload.launch" >
            <arg name="init_pose" value="-x 0 -y 0 -z 0" />
            <arg name="robot_name"  value="robotont" />
        </include>
    </group>
    <group unless="$(eval prefix == '_')" ns="$(arg ns)">
        <include file="$(find robotont_gazebo)/launch/upload.launch" >
            <arg name="init_pose" value="-x 0 -y 0 -z 0" />
            <arg name="robot_name"  value="robotont" />
        </include>
    </group>
    <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher" />

</launch>   
