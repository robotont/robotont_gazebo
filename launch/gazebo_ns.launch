<?xml version="1.0" ?>
<launch>
    <arg name="ns" default=""/>
    <arg name="world" default="worlds/empty.world" />
    <arg name="x_pos" default="0"/>
    <arg name="model" default="robotont_gazebo_nuc"/>
    <arg name="prefix" default="$(arg ns)_"/>
    <arg name="robot_name" default="robotont"/>
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" value="$(arg world)"/>
    </include>
    <include file="$(find robotont_gazebo)/launch/upload_description.launch">
        <arg name="__ns" value="$(arg ns)"/>
    </include>
    <!-- topic for 3d_mapping -->
    <node if="$(eval prefix == '_')" name="relay" type="relay" pkg="topic_tools" args="/camera/depth/image_rect_raw /camera/aligned_depth_to_color/image_raw" />
    <node unless="$(eval prefix == '_')" name="relay" type="relay" pkg="topic_tools" args="$(arg ns)/camera/depth/image_rect_raw $(arg ns)/camera/aligned_depth_to_color/image_raw" />

    <group>
        <include file="$(find robotont_gazebo)/launch/spawn_urdf.launch" >
            <arg name="x_pos" value="$(arg x_pos)" />
        </include>
    </group>
    <group unless="$(eval prefix == '_')" ns="$(arg ns)">
        <include file="$(find robotont_gazebo)/launch/spawn_urdf.launch" >
            <arg name="x_pos" value="$(arg x_pos)" />
        </include>
    </group>
</launch>   

